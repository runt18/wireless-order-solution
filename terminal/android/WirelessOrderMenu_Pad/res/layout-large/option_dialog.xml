<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/button_optionDialog_closeDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="关闭" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <Button
                android:id="@+id/button_optionDialog_tableSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐台设置"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_optionDialog_staffSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务员设置" />
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/tablePanelFgm_optionDialog"
        android:name="com.wireless.fragment.TablePanelFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1" />

    <fragment
        android:id="@+id/staffPanelFgm_optionDialog"
        android:name="com.wireless.fragment.StaffPanelFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:visibility="invisible" />

</RelativeLayout>