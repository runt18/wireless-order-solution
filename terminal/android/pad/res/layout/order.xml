<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
        <!-- 头部 区域 1 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/av_r1_c1" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/av_back_selector" />

        <Button
            android:id="@+id/refurbish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/av_refurbish_selector" />

       

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/username_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#000000"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="点菜"
                android:textColor="#ffffff"
                android:textSize="23sp" />
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:weightSum="1"
    android:orientation="horizontal" >
    
    
	<LinearLayout 
	android:id="@+id/orderlist"    
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:orientation="vertical"
	    >
	    
	    <RelativeLayout
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	         >
	    
	    <RelativeLayout android:id="@+id/restitle"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/bg02"
		>
		<TextView android:id="@+id/platform" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:textColor="#000000" android:layout_centerVertical="true"
			android:layout_marginLeft="20dip" android:text="台号:">
		</TextView>

		<EditText android:focusable="true"
			android:focusableInTouchMode="true" android:id="@+id/tblNoEdtTxt"
			android:layout_width="180dip" android:layout_height="wrap_content"
			android:textSize="20sp" android:textColor="#000000"
			android:digits="0123456789."
			android:singleLine="true"
			android:gravity="center_horizontal"
			android:layout_centerVertical="true" android:layout_toRightOf="@id/platform"
			android:layout_marginLeft="5dip" android:background="@drawable/kuangbg"
			android:inputType="numberSigned|text">
		</EditText>



		<TextView android:id="@+id/people" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:textColor="#000000" android:layout_centerVertical="true"
			android:layout_toRightOf="@id/tblNoEdtTxt" android:layout_marginLeft="20dip"
			android:text="人数:"></TextView>

		<EditText android:focusable="true"
			android:focusableInTouchMode="true" android:id="@+id/customerNumEdtTxt"
			android:layout_width="180dip" android:layout_height="wrap_content"
			android:textSize="20sp" android:textColor="#000000"
			android:digits="0123456789."
			android:singleLine="true"
			android:gravity="center_horizontal"
			android:layout_centerVertical="true" android:layout_toRightOf="@id/people"
			android:layout_marginLeft="3dip" android:background="@drawable/kuangbg"
			android:inputType="numberSigned|text"></EditText>


	</RelativeLayout>
	    
	
	    
	    <RelativeLayout android:id="@+id/bottom"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:background="@drawable/bg03">
				
			
			<TextView android:id="@+id/totalTxtView" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFF"
			android:layout_centerVertical="true" 
			 android:textSize="18sp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:typeface="sans" android:textStyle="bold"
			 />
			 
			 
		<TextView android:id="@+id/amount" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFF"
			android:layout_centerVertical="true" android:textSize="18sp"
			android:typeface="sans" android:textStyle="bold"
			android:layout_toLeftOf="@id/totalTxtView"
			android:layout_marginRight="5dip"
			android:text="小计:" />
	</RelativeLayout>
	    
	    
	    <com.wireless.view.OrderFoodListView
		android:id="@+id/orderLstView" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/restitle"
		android:divider="@drawable/line" android:cacheColorHint="#00000000"
		android:groupIndicator="@null"
		android:layout_above="@id/bottom">
	</com.wireless.view.OrderFoodListView>
	
	
	</RelativeLayout>
	
	</LinearLayout>
    
	
	
	<LinearLayout 
	android:id="@+id/dynamic"    
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.5"
	    >
	    
	    
	    
	</LinearLayout>
	
	</LinearLayout>
	
</LinearLayout>