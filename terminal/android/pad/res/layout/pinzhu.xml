<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/conternbg"
    android:orientation="vertical" >
    
    
    
  	<RelativeLayout android:id="@+id/r_taste"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:background="@drawable/dropgrounpitem_selector"
		>
		<TextView android:id="@+id/foodTasteTxtView" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:textColor="#000000" android:layout_centerVertical="true"
			android:layout_marginLeft="5dip"></TextView>

		<Button
		    android:id="@+id/cancelTasteBtn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:text="删除口味" />

	</RelativeLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="60dip"
        >
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="品注:"
            android:layout_weight="0.3"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <EditText 
            android:id="@+id/pinZhuEdtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        
    </LinearLayout>

    
       <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        >
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="价钱:"
            android:layout_weight="0.3"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <EditText 
            android:id="@+id/priceEdtTxt"
            android:digits="0123456789."
            android:inputType="number"           
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        
    </LinearLayout>
</LinearLayout>