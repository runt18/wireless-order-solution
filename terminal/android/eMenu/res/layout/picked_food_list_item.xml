<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="6dp" >

    <TextView
        android:id="@+id/textView_picked_food_name_item"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_operation_pickedFood_list_item"
        android:layout_alignParentLeft="true"
        android:text="菜名"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_m" />

    <TextView
        android:id="@+id/textView_picked_food_price_item"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_operation_pickedFood_list_item"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/textView_picked_food_name_item"
        android:text="单价"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_m" />

    <ImageButton
        android:id="@+id/imageButton_minus_pickedFood_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@+id/textView_picked_food_price_item"
        android:background="@null"
        android:focusable="false"
        android:src="@drawable/minus_btn_selector" />

    <Button
        android:id="@+id/textView_picked_food_count_item"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_operation_pickedFood_list_item"
        android:layout_toRightOf="@+id/imageButton_minus_pickedFood_item"
        android:background="@null"
        android:ems="10"
        android:focusable="false"
        android:gravity="top|center_horizontal"
        android:inputType="numberDecimal"
        android:paddingTop="6dp"
        android:text="11"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_m" >

    </Button>

    <ImageButton
        android:id="@+id/imageButton_plus_pickedFood_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_picked_food_count_item"
        android:background="@null"
        android:focusable="false"
        android:src="@drawable/plus_btn_selector" />

    <Button
        android:id="@+id/button_delete_pickedFood_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="删除"
        android:textSize="@dimen/text_size_m" />

    <Button
        android:id="@+id/button_operation_pickedFood_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/button_delete_pickedFood_list_item"
        android:text="催菜"
        android:textSize="@dimen/text_size_m" />

    <View
        android:id="@+id/view_pickedFood_cancel_line"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/textView_picked_food_name_item"
        android:layout_alignRight="@+id/textView_picked_food_sum_price"
        android:layout_marginTop="16dp"
        android:background="@color/red"
        android:visibility="invisible" />

    <!--
         <TextView
        android:id="@+id/textView_hangup_pickedFood_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_operation_pickedFood_list_item"
        android:layout_alignBottom="@+id/button_operation_pickedFood_list_item"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/button_operation_pickedFood_list_item"
        android:text="叫起 "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />
    -->

    <TextView
        android:id="@+id/textView_picked_food_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_operation_pickedFood_list_item"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/button_operation_pickedFood_list_item"
        android:text="总价 "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_m" />

    <ImageView
        android:id="@+id/imageView_pickedFood_hurry_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView_picked_food_price_item"
        android:src="@drawable/hurry_signal_small" />

</RelativeLayout>