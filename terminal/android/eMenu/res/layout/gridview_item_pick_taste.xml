<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/realativeLayout_pickTaste_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/blue" >

        <TextView
            android:id="@+id/textView_tastePrice_gridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_tasteName_gridItem"
            android:layout_below="@+id/textView_tasteName_gridItem"
            android:layout_marginTop="12dp"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/textView_tasteName_gridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_m" />

        <CheckBox
            android:id="@+id/checkBox_pickTaste_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_tastePrice_gridItem"
            android:layout_alignBottom="@+id/textView_tastePrice_gridItem"
            android:layout_alignParentLeft="true"
            android:text="CheckBox"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>