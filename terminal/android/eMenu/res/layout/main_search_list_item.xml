<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/imageView_main_search_list_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textView_main_search_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_main_search_list_item"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/button_main_search_list_item_add"
        android:layout_toRightOf="@+id/imageView_main_search_list_item"
        android:text="名"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_l" />

    <TextView
        android:id="@+id/textView_main_search_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_main_search_list_item_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageView_main_search_list_item"
        android:text="价"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red_orange"
        android:textSize="@dimen/text_size_m" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_main_search_list_item_price"
        android:layout_alignBottom="@+id/textView_main_search_list_item_price"
        android:layout_toRightOf="@+id/textView_main_search_list_item_price"
        android:text=" 元/份"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_m" />

    <Button
        android:id="@+id/button_main_search_list_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/main_search_list_add_selector" />

    <ImageView
        android:id="@+id/imageView_main_list_item_selloutSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button_main_search_list_item_add"
        android:layout_centerVertical="true"
        android:src="@drawable/sell_out_signal"
        android:visibility="gone" />

</RelativeLayout>