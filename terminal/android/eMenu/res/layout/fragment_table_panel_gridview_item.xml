<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/table_bg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/table"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_tableNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="101"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xxl" />

        <TextView
            android:id="@+id/textView_tableName"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/textView_tableNum"
            android:layout_marginLeft="20dp"
            android:text="名称"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:id="@+id/textView_table_item_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView_tableNum"
            android:layout_below="@+id/textView_tableNum"
            android:layout_marginTop="10dp"
            android:text="人"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/textView_customNum_gridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_table_item_people"
            android:layout_alignBottom="@+id/textView_table_item_people"
            android:layout_toLeftOf="@+id/textView_table_item_people"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_s" />
 
    </RelativeLayout>

</RelativeLayout>