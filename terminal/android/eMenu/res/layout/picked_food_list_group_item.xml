<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/picked_food_group_item" >

    <TextView
        android:id="@+id/textView_groupName_pickedFood_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:text="标题"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_l" />

    <Button
        android:id="@+id/button_selectedFoodListGroup_item_tempFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="添加临时菜"
        android:textSize="@dimen/text_size_m" />

    <EditText
        android:id="@+id/editText_SelectedFood_listGroup_item_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_selectedFoodListGroup_item_tempFood"
        android:layout_alignBottom="@+id/button_selectedFoodListGroup_item_tempFood"
        android:layout_toLeftOf="@+id/button_selectedFoodListGroup_item_tempFood"
        android:background="@drawable/search_bar"
        android:ems="10"
        android:hint="搜索菜品"
        android:paddingLeft="10dp"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_size_m" />

    <Button
        android:id="@+id/button_selectedFoodListGroup_item_clear"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_selectedFoodListGroup_item_tempFood"
        android:background="@drawable/delete_all_selector" />

</RelativeLayout>