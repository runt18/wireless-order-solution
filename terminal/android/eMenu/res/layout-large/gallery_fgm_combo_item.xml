<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView_galleryFgm_combo_item"
        android:layout_width="200dp"
        android:layout_height="144dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/null_pic_small" />

    <Button
        android:id="@+id/button_galleryFgm_combo_item_add"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView_galleryFgm_combo_item"
        android:layout_below="@+id/imageView_galleryFgm_combo_item"
        android:background="@drawable/main_search_list_add_selector" />

    <TextView
        android:id="@+id/textView_galleryFgm_combo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/button_galleryFgm_combo_item_add"
        android:layout_toLeftOf="@+id/button_galleryFgm_combo_item_add"
        android:text="名"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

</RelativeLayout>