<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bgcolor"
  >
    
    
    <RelativeLayout android:id="@+id/top"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/bg01" android:layout_alignParentTop="true">
		<ImageView android:id="@+id/networkback" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/back_selector"
			android:layout_marginLeft="20dip" android:layout_centerVertical="true">

		</ImageView>
		<TextView android:id="@+id/networktitle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFF"
			android:textSize="22sp" android:textStyle="bold" android:typeface="monospace"
			android:shadowDx="1" android:shadowDy="1" android:shadowRadius="3.0"
			android:text="网络设置" android:layout_centerVertical="true"
			android:layout_centerHorizontal="true">
		</TextView>

		<ImageView android:id="@+id/testnet"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/network_selector" android:layout_centerVertical="true"
			android:layout_alignParentRight="true" android:layout_marginRight="20dip">

		</ImageView>
	</RelativeLayout>
    
    <RelativeLayout 
	android:id="@+id/r1"
	android:layout_width="fill_parent"
	android:layout_height="60dip"
	android:layout_below="@id/top"
	>
	<TextView 
	android:id="@+id/ip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="18sp"
	android:textStyle="bold"
	android:typeface="sans"
	android:text="服务器IP"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	/>
	
	<EditText
	android:id="@+id/ipnum"
	android:layout_width="400dip"
	android:layout_height="wrap_content"
	android:textColor="#FF6600"
	android:textSize="15sp"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	android:background="@null"
	android:layout_below="@id/ip"
	/>
	
	</RelativeLayout>
	
	<ImageView 
	android:id="@+id/l1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/line"
	android:layout_below="@id/r1"
	/>
	
	
	 <RelativeLayout 
	android:id="@+id/r2"
	android:layout_width="fill_parent"
	android:layout_height="60dip"
	android:layout_below="@id/r1"
	>
	<TextView 
	android:id="@+id/port"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="18sp"
	android:textStyle="bold"
	android:typeface="sans"
	android:text="服务器端口"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	/>
	
	<EditText
	android:id="@+id/portnum"
	android:layout_width="400dip"
	android:layout_height="wrap_content"
	android:textColor="#FF6600"
	android:textSize="15sp"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	android:background="@null"
	android:layout_below="@id/port"
	/>
	
	</RelativeLayout>
	
	<ImageView 
	android:id="@+id/l2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/line"
	android:layout_below="@id/r2"
	/>
	
	
	 <RelativeLayout 
	android:id="@+id/r3"
	android:layout_width="fill_parent"
	android:layout_height="60dip"
	android:layout_below="@id/l2"
	>
	<TextView 
	android:id="@+id/apn"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="18sp"
	android:textStyle="bold"
	android:typeface="sans"
	android:text="APN"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	/>
	
	<EditText
	android:id="@+id/apnnum"
	android:layout_width="400dip"
	android:layout_height="wrap_content"
	android:textColor="#FF6600"
	android:textSize="15sp"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	android:background="@null"
	android:layout_below="@id/apn"
	/>
	
	</RelativeLayout>
	
	<ImageView 
	android:id="@+id/l3"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/line"
	android:layout_below="@id/r3"
	/>
	
	
	 <RelativeLayout 
	android:id="@+id/r4"
	android:layout_width="fill_parent"
	android:layout_height="60dip"
	android:layout_below="@id/l3"
	>
	<TextView 
	android:id="@+id/username"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="18sp"
	android:textStyle="bold"
	android:typeface="sans"
	android:text="用户名"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	/>
	
	<EditText
	android:id="@+id/usernamenum"
	android:layout_width="400dip"
	android:layout_height="wrap_content"
	android:textColor="#FF6600"
	android:textSize="15sp"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	android:background="@null"
	android:layout_below="@id/username"
	/>
	
	</RelativeLayout>
	
	<ImageView 
	android:id="@+id/l4"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/line"
	android:layout_below="@id/r4"
	/>
	
	
		 <RelativeLayout 
	android:id="@+id/r5"
	android:layout_width="fill_parent"
	android:layout_height="60dip"
	android:layout_below="@id/l4"
	>
	<TextView 
	android:id="@+id/password"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="18sp"
	android:textStyle="bold"
	android:typeface="sans"
	android:text="密码"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	/>
	
	<EditText
	android:id="@+id/passwordnum"
	android:layout_width="400dip"
	android:layout_height="wrap_content"
	android:textColor="#FF6600"
	android:textSize="15sp"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	android:inputType="textPassword"
	android:background="@null"
	android:layout_below="@id/password"
	/>
	
	</RelativeLayout>
	
	<ImageView 
	android:id="@+id/l5"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/line"
	android:layout_below="@id/r5"
	/>
	
	
	<RelativeLayout 
	android:id="@+id/r6"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_below="@id/l5"
	android:layout_centerHorizontal="true"
	android:layout_marginTop="30dip"
	>
	<ImageView 
	android:id="@+id/netdefinite"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/yes_selector"
	android:layout_marginLeft="50dip"
	/>
	
	<ImageView 
	android:id="@+id/netcancle"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/cancle_selector"
	android:layout_toRightOf="@id/netdefinite"
	android:layout_marginLeft="40dip"
	/>
	</RelativeLayout>
</RelativeLayout>
