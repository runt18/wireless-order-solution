<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg01" >

        <ImageView
            android:id="@+id/numback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:src="@drawable/back_selector" >
        </ImageView>

        <TextView
            android:id="@+id/numtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3.0"
            android:text="点菜-编号"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="monospace" >
        </TextView>

        <ImageView
            android:id="@+id/numorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:src="@drawable/popuwindow_selector" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/top_num"
        android:background="@drawable/bg02" >

        <TextView
            android:id="@+id/ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:text="编号:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/filterNumEdtTxt"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/ordernum"
            android:inputType="number" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" 
        android:layout_below="@id/line"
        >

        <com.wireless.ui.view.PickFoodListView
            android:id="@+id/pickByNumLstView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_below="@id/line"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/line"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:fastScrollEnabled="true" >
        </com.wireless.ui.view.PickFoodListView>

        <LinearLayout
            android:id="@+id/NumsideIndex"
            android:layout_width="45dip"
            android:layout_height="fill_parent"
            android:background="#FFF"
			android:gravity="right"
			android:layout_gravity="right"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
    
     

</RelativeLayout>