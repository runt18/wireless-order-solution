<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ImageButton
            android:id="@+id/left_btn_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffff"
            android:src="@drawable/bg09down" />

        <ImageButton
            android:id="@+id/middle_btn_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:background="#00ffff"
            android:src="@drawable/amountdown" />

        <ImageButton
            android:id="@+id/right_btn_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00ffff"
            android:src="@drawable/bg10" />

        <TextView
            android:id="@+id/text3_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/hint"
            android:text="67"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text2_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/right_btn_bottom"
            android:background="@drawable/hint"
            android:text="67"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text1_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/left_btn_bottom"
            android:background="@drawable/hint"
            android:text="67"
            android:textColor="#fff"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>