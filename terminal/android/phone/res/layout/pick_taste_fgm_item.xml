<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="1px" >

    <ImageView
        android:id="@+id/imgView_bg_pickTasteFgm_item"
        android:layout_width="99dp"
        android:layout_height="79dp"
        android:background="@color/green" />

    <TextView
        android:id="@+id/txtView_tasteName_pickTasteFgm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imgView_bg_pickTasteFgm_item"
        android:text="一鱼两味"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txtView_currencySign_pickTasteFgm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgView_bg_pickTasteFgm_item"
        android:layout_marginBottom="4dp"
        android:text="￥"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtView_price_pickTasteFgm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtView_currencySign_pickTasteFgm_item"
        android:layout_toRightOf="@+id/txtView_currencySign_pickTasteFgm_item"
        android:text="1.0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue"
        android:textSize="22sp" />

</RelativeLayout>