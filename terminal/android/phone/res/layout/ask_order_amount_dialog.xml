<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:weightSum="5" >

        <ImageButton
            android:id="@+id/button_askOrderAmount_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:padding="9dp"
            android:src="@drawable/reduc_selector" />

        <EditText
            android:id="@+id/editText_askOrderAmount_amount"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:singleLine="true"
            android:text="1"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/button_askOrderAmount_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="9dp"
            android:src="@drawable/add_selector" />

        <CheckBox
            android:id="@+id/checkBox_askOrderAmount_hurry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:focusable="false"
            android:gravity="bottom"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="4dp"
        android:weightSum="2" >

        <Button
            android:id="@+id/button_askOrderAmount_confirm"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/yes_selector"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button_askOrderAmount_cancel"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cancle_selector"
            android:textColor="#000000" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridView_askOrderAmount_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:horizontalSpacing="2dp"
        android:numColumns="4"
        android:verticalSpacing="2dp" >
    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridView_askOrderAmount_dialog"
        android:weightSum="2" >

        <Button
            android:id="@+id/button_askOrderAmount_taste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="更多口味" />

        <Button
            android:id="@+id/button_askOrderAmount_tempTaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手写品注" />
    </LinearLayout>

</RelativeLayout>