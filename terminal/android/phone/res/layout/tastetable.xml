    <RelativeLayout
        android:id="@+id/foodTaste"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/top" >

        <TextView
            android:id="@+id/foodTasteTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:textColor="#000000"
            android:textSize="20sp" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tasteTabsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:background="@drawable/tab_bg_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dip"
        android:weightSum="4" >

        <LinearLayout
            android:id="@+id/tasteLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dip"
                android:src="@drawable/ic_tab_albums" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingTop="1dip"
                android:text="口味"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/styleLayout"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dip"
                android:src="@drawable/ic_tab_artists" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="1dip"
                android:gravity="center"
                android:text="做法"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/specLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dip"
                android:src="@drawable/ic_tab_songs" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="1dip"
                android:gravity="center"
                android:text="规格"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="20sp" />
        </LinearLayout>
        
        
        
        <LinearLayout
            android:id="@+id/pinzhuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dip"
                android:src="@drawable/pinzhu_selector" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingTop="1dip"
                android:text="品注"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="20sp" />
        </LinearLayout>
        
    </LinearLayout>

    <com.wireless.ui.view.ScrollLayout
        android:id="@+id/tasteScrollLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/tasteTabsLayout"
        android:layout_below="@id/foodTaste"
        android:layout_gravity="center" />

</RelativeLayout>