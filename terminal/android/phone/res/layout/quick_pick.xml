<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/top"
        layout="@layout/topbar" />

    <RelativeLayout
        android:id="@+id/relativeLayout_revealFood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/top"
        android:visibility="visible" >

        <com.wireless.ui.view.OrderFoodListView
            android:id="@+id/orderFoodListView_revealFood_quickPick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relativeLayout_bottom_revealFood_quickPick"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </com.wireless.ui.view.OrderFoodListView>

        <RelativeLayout
            android:id="@+id/relativeLayout_bottom_revealFood_quickPick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="总数：" />

            <TextView
                android:id="@+id/textView_totalPrice_revealFood_quickPick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40dp"
                android:text="23" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView_totalPrice_revealFood_quickPick"
                android:text="总价：" />

            <TextView
                android:id="@+id/textView_totalCount_revealFood__quickPick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView2"
                android:text="111" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView_totalCount_revealFood__quickPick"
                android:text="份" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayout_container_quickPick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top"
        android:background="@color/white"
        android:visibility="gone" >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="4" >

        <ImageButton
            android:id="@+id/imageButton_num_quickPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/num_btn_selector" />

        <ImageButton
            android:id="@+id/imageButton_kitchen_quickPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/kitchen_btn_selector" />

        <ImageButton
            android:id="@+id/imageButton_spell_quickPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/spell_selector"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/imageButton_remark_quickPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/picked_food_selector"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>