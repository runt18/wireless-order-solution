<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bgcolor"
  >
    <RelativeLayout android:id="@+id/r1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/bg01" android:layout_alignParentTop="true">
		<ImageView android:id="@+id/tempback" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/back_selector"
			android:layout_marginLeft="20dip" android:layout_centerVertical="true">

		</ImageView>
		<TextView android:id="@+id/occatitle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFF"
			android:textSize="22sp" android:textStyle="bold" android:typeface="monospace"
			android:shadowDx="1" android:shadowDy="1" android:shadowRadius="3.0"
			android:text="点菜-临时菜" android:layout_centerVertical="true"
			android:layout_centerHorizontal="true">
		</TextView>

	</RelativeLayout>
	
	
	<RelativeLayout android:id="@+id/r2"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:layout_below="@id/r1" android:background="@drawable/bg02">
		<TextView android:id="@+id/orderpin" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000"
			android:layout_centerVertical="true" android:textSize="20sp"
			android:text="添加临时菜" android:layout_marginLeft="20dip" />
		<ImageView 
		android:id="@+id/add"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="20dip"
		android:src="@drawable/add_selector"
		/>
	</RelativeLayout>
	
  <com.wireless.ui.view.TempListView
  android:id="@+id/tempListView"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:divider="@drawable/line"
  android:cacheColorHint="#00000000"
  android:fadeScrollbars="false"
  android:fadingEdge="none"
  android:fastScrollEnabled="true" 
  >
  </com.wireless.ui.view.TempListView>	
</LinearLayout>
