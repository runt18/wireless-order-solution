<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/bgcolor"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    
    
    <RelativeLayout android:id="@+id/top"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/bg01" android:layout_alignParentTop="true">
		<ImageView android:id="@+id/functionback" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/back_selector"
			android:layout_marginLeft="20dip" android:layout_centerVertical="true">

		</ImageView>
		<TextView android:id="@+id/functiontitle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFF"
			android:textSize="22sp" android:textStyle="bold" android:typeface="monospace"
			android:shadowDx="1" android:shadowDy="1" android:shadowRadius="3.0"
			android:text="功能设置" android:layout_centerVertical="true"
			android:layout_centerHorizontal="true">
		</TextView>

		<ImageView android:id="@+id/ convalescence"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/de_selector" android:layout_centerVertical="true"
			android:layout_alignParentRight="true" android:layout_marginRight="20dip">

		</ImageView>
	</RelativeLayout>
	
	<RelativeLayout 
	android:id="@+id/r1"
	android:layout_width="fill_parent"
	android:layout_height="70dip"
	android:layout_below="@id/top"
	>
	<TextView 
	android:id="@+id/pin"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="18sp"
	android:textStyle="bold"
	android:typeface="sans"
	android:text="PIN"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	/>
	
	<TextView 
	android:id="@+id/pinnum"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#FF6600"
	android:textSize="15sp"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	android:layout_below="@id/pin"
	/>
	
	</RelativeLayout>
	
	<ImageView 
	android:id="@+id/l1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/line"
	android:layout_below="@id/r1"
	/>
	
	<RelativeLayout 
	android:id="@+id/r2"
	android:layout_width="fill_parent"
	android:layout_height="70dip"
	android:layout_below="@id/l1"
	>
	<TextView 
	android:id="@+id/afterketchen"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="18sp"
	android:textStyle="bold"
	android:typeface="sans"
	android:text="后厨打印"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	/>
	
	<Spinner
	android:id="@+id/afterketchenmethod"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="15sp"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	android:background="@drawable/bg06"
	android:layout_below="@id/afterketchen"
	/>
	
	</RelativeLayout>
	
	<ImageView 
	android:id="@+id/l2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/line"
	android:layout_below="@id/r2"
	/>
	
	
	
	<RelativeLayout 
	android:id="@+id/r3"
	android:layout_width="fill_parent"
	android:layout_height="70dip"
	android:layout_below="@id/l2"
	>
	<TextView 
	android:id="@+id/connection"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="18sp"
	android:textStyle="bold"
	android:typeface="sans"
	android:text="连接超时"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	/>
	
	<Spinner
	android:id="@+id/connectiontime"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:textSize="15sp"
	android:background="@drawable/bg06"
	android:layout_marginTop="2dip"
	android:layout_marginLeft="20dip"
	android:layout_below="@id/connection"
	/>
	
	</RelativeLayout>
	
	<ImageView 
	android:id="@+id/l3"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/line"
	android:layout_below="@id/r3"
	/>
	
	
	<RelativeLayout 
	android:id="@+id/r4"
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:layout_below="@id/l3"
	android:layout_centerHorizontal="true"
	android:layout_marginTop="30dip"
	>
	<ImageView 
	android:id="@+id/definite"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/yes_selector"
	android:layout_marginLeft="50dip"
	/>
	
	<ImageView 
	android:id="@+id/cancle"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/cancle_selector"
	android:layout_toRightOf="@id/definite"
	android:layout_marginLeft="40dip"
	/>
	</RelativeLayout>
	
	
</RelativeLayout>
