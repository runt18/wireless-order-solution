<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/kuang" >

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="fill_parent"
        android:layout_height="50dip" >

        <TextView
            android:id="@+id/ordername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </RelativeLayout>

    <TextView
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/mycount"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:layout_below="@id/l1"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/table"
        android:background="@drawable/input"
        android:digits="0123456789."
        android:focusableInTouchMode="true"
        android:inputType="numberSigned|text"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" >

        <requestFocus />
    </EditText>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_below="@id/mycount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip" >

        <Button
            android:id="@+id/confirm"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dip"
            android:src="@drawable/yes_selector"
            android:textColor="#000000" />

        <Button
            android:id="@+id/alert_cancel"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@id/confirm"
            android:src="@drawable/cancle_selector"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>