<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_interestedIn_memberList_listItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/member_list_interested_selector"
        android:padding="4dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/button_interestedIn_memberList_listItem" >

        <TextView
            android:id="@+id/txtView_name_memberList_listItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员姓名"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:typeface="sans" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtView_tele_memberList_listItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:text="电话"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF6600" />

</RelativeLayout>