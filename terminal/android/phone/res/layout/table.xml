<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <include
        android:id="@+id/top"
        layout="@layout/topbar" />

    <!--  -->
<LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>
    <RelativeLayout
        android:id="@+id/search_table"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top"
         >

        <AutoCompleteTextView
            android:id="@+id/search_view_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="请输入台号或房间名"
            android:paddingLeft="6dp"
            android:paddingTop="2dp" />

        <ImageButton
            android:id="@+id/deleteBtn_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:src="@drawable/search_selector" />

    </RelativeLayout>

    <TextView
        android:id="@+id/hint_text_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="没有找到匹配的项"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dartgrey"
        android:textSize="36sp"
        android:visibility="gone" />
 
         <com.wireless.ui.view.PullListView
             android:id="@+id/listView_table"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_above="@+id/arelativeLayout1"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/search_table"
             android:cacheColorHint="@color/dartgrey"
             android:fadingEdge="vertical"
             android:fadingEdgeLength="2dp" >

     </com.wireless.ui.view.PullListView>
  
    
    <RelativeLayout
        android:id="@+id/arelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#9b95e6" >

        <ImageButton
            android:id="@+id/left_btn_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:src="@drawable/all_selector" />

        <ImageButton
            android:id="@+id/right_btn_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:src="@drawable/eating_selector" />

        <ImageButton
            android:id="@+id/middle_btn_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:src="@drawable/free_selector" />

        <TextView
            android:id="@+id/left_txt_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/left_btn_bottom"
            android:background="@drawable/hint"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="11"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/middle_txt_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/middle_btn_bottom"
            android:background="@drawable/hint"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_txt_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/hint"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

 

</RelativeLayout>