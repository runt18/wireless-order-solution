<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/top"
        layout="@layout/topbar" />

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg01"
        android:orientation="horizontal"
        android:weightSum="4" >

        <RadioButton
            android:id="@+id/radio0_bbar4btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/occasional_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="bottom|center_horizontal"
            android:text="R1" />

        <RadioButton
            android:id="@+id/radio1_bbar4btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_selector"
            android:button="@null"
            android:gravity="bottom|center_horizontal"
            android:text="R2" />

        <RadioButton
            android:id="@+id/radio2_bbar4btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="bottom|center_horizontal"
            android:text="R3" />

        <RadioButton
            android:id="@+id/radio3_bbar4btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="bottom|center_horizontal"
            android:text="R4" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/frameLayout_container_pickFood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombar"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top"
        android:background="@color/white" >

    </FrameLayout>

</RelativeLayout>