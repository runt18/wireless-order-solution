<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_set_amountDialog_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_set_amountDialog"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/editText_set_amountDialog"
        android:background="@drawable/add_selector" />

    <EditText
        android:id="@+id/editText_set_amountDialog"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_set_amountDialog_minus"
        android:ems="10"
        android:inputType="number|numberDecimal" />

    <Button
        android:id="@+id/button_set_amountDialog_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_set_amountDialog"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/reduc_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_set_amountDialog"
        android:layout_marginTop="2dp"
        android:weightSum="3" >

        <Button
            android:id="@+id/button_set_amountDialog_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定" />

        <Button
            android:id="@+id/button_set_amountDialog_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除" />

        <Button
            android:id="@+id/button_set_amountDialog_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>