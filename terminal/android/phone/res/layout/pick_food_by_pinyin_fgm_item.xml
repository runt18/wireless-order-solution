<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="1px" >

    <ImageView
        android:id="@+id/imageView_pickFoodFragment_item"
        android:layout_width="99dp"
        android:layout_height="79dp"
        android:src="@drawable/kitchen_fgm_xplv_item_selector" />

    <TextView
        android:id="@+id/textView_foodName_pickFoodFragment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView_pickFoodFragment_item"
        android:text="坑爹的菜名..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_pickFoodFragment_item"
        android:layout_marginBottom="4dp"
        android:text="￥"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView_price_pickFoodFragment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="1.0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView_num_pickFoodFragment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_price_pickFoodFragment_item"
        android:layout_alignBottom="@+id/textView_price_pickFoodFragment_item"
        android:layout_alignRight="@+id/imageView_pickFoodFragment_item"
        android:text="132"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_sellout_pickFoodFgm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignBottom="@+id/imageView_pickFoodFragment_item"
        android:layout_alignRight="@+id/imageView_pickFoodFragment_item"
        android:layout_centerVertical="true"
        android:text="停"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/maroon"
        android:textSize="26sp"
        android:visibility="visible" />

</RelativeLayout>