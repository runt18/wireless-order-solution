<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_sellOut_listItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/table_add_btn_selector"
        android:padding="4dp"
        android:textColor="@color/blue"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout_sellOut_listItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/button_sellOut_listItem" >

        <TextView
            android:id="@+id/txtView_foodName_sellOut_listItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜名"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#483D8B"
            android:textSize="20sp"
            android:typeface="sans" />

        <View
            android:id="@+id/view_huaxian_sellOut_listItem"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:background="@color/red"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtView_price_sellOut_listItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout_sellOut_listItem"
        android:text="价钱"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF6600" />

    <TextView
        android:id="@+id/txtView_limitAmount_sellOut_listItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtView_price_sellOut_listItem"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txtView_price_sellOut_listItem"
        android:text="限量:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/txtView_limitRemaining_sellOut_listItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtView_price_sellOut_listItem"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txtView_limitAmount_sellOut_listItem"
        android:text="剩余:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/green" />

</RelativeLayout>