<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:minHeight="50dip"
  >
    <TextView 
    android:id="@+id/foodname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="20sp"
    android:layout_marginLeft="5dip"
    android:layout_marginTop="5dip"
    />
    
  <TextView
    android:id="@+id/foodpinyin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="15sp"
    android:layout_marginLeft="5dip"
    android:layout_marginTop="5dip"
    android:layout_below="@id/foodname"
    >
    </TextView>
    
      <TextView
    android:id="@+id/foodpinyins"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#FF6600"
    android:textSize="15sp"
    android:layout_alignTop="@id/foodpinyin"
    android:layout_toRightOf="@id/foodpinyin"
    >
    </TextView>
    
    <TextView
    android:id="@+id/foodprice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="15sp"
    android:layout_marginLeft="5dip"
    android:text="价格："
    android:layout_alignTop="@id/foodpinyins"
    android:layout_toRightOf="@id/foodpinyins"
    >
    </TextView>
        <TextView 
    android:id="@+id/foodprices"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#FF6600"
    android:textSize="15sp"
    android:layout_alignTop="@id/foodprice"
    android:layout_toRightOf="@id/foodprice"
    />
    
   
</RelativeLayout>
