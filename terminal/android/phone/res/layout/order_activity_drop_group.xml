<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dropgrounpitem_selector"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="50dip" >

    <ImageView
        android:id="@+id/imgView_arraw_orderDropGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip" />

    <TextView
        android:id="@+id/txtView_name_orderDropGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@id/imgView_arraw_orderDropGroup"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imgView_right_orderDropGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip" />

    <ImageView
        android:id="@+id/imgView_left_orderDropGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/imgView_right_orderDropGroup" />

    <Button
        android:id="@+id/button_orderActivity_opera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignRight="@+id/imgView_left_orderDropGroup"
        android:layout_centerVertical="true"
        android:background="@drawable/all_order_selector"
        android:visibility="gone" />

</RelativeLayout>